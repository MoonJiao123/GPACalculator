<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyColor"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tvItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/msgItem"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvItems"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/msgScore"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor"/>

    <TextView
        android:id="@+id/tvPercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvItems"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/msgPercent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor"/>
    </LinearLayout>

    <View
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/whiteColor"/>

    <LinearLayout
        android:id="@+id/hwInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLine"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/hw"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_button"
        android:layout_weight="1"
        android:text="@string/msgHomework"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/whiteColor"/>
        <EditText
            android:id="@+id/hwScore"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/hintScore"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/hwPercentage"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/hintPercentage"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/tvLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/hwInfo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/whiteColor"/>

    <LinearLayout
        android:id="@+id/quizInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLine2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quiz"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:text="@string/msgQuiz"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteColor"/>
        <EditText
            android:id="@+id/quizScore"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/hintScore"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/quizPercentage"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/hintPercentage"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/tvLine3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/quizInfo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/whiteColor"/>

    <LinearLayout
        android:id="@+id/midtermInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLine3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/midterm"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:text="@string/msgMidterm"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteColor"/>
        <EditText
            android:id="@+id/midtermScore"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/hintScore"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/midtermPercentage"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/hintPercentage"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/tvLine4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/midtermInfo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/whiteColor"/>

    <LinearLayout
        android:id="@+id/finalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLine4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/finalResult"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:text="@string/msgFinal"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteColor"/>
        <EditText
            android:id="@+id/finalScore"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/hintScore"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/finalPercentage"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_button"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/hintPercentage"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/tvLine5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/finalInfo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/whiteColor"/>


    <View
        android:id="@+id/tvLine6"
        android:layout_width="1dp"
        android:layout_height="220dp"
        android:layout_marginLeft="125dp"
        android:background="@color/whiteColor"/>
    <View
        android:id="@+id/tvLine7"
        android:layout_width="1dp"
        android:layout_height="220dp"
        android:layout_marginLeft="240dp"
        android:background="@color/whiteColor"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor"
        android:text="@string/result" />
    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/activity_text_size"
        android:text="@string/calculation" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:gravity="center"
        android:text="@string/calculate" />


</RelativeLayout>